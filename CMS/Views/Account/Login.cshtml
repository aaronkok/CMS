@using CMS.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="container pt-5">
    <div class="mx-auto card login-form" style="width: 450px">
        <div class="card-body">

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin" }))
            {
                @Html.AntiForgeryToken()
                <h3 id="mid" class="mb-3 font-weight-normal">Login</h3>
                <div class="form-group">
                    @Html.LabelFor(m=>m.UserName)
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", name = "txtUserName", id = "txtUserName", type = "text" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m=>m.Password)
                    @Html.TextBoxFor(m=>m.Password, new { @class = "form-control", name="txtPassword", id="txtPassword", type="password" })
                </div>
                <button type="submit" class="btn btn-block btn-primary">Submit</button>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}